{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "vite/client",
      "node"
    ],
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./src/global.d.ts",
      "node_modules/@types"
    ],
    "strict": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "vite.config.ts",
    "node_modules/@types"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
